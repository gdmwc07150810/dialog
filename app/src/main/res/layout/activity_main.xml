<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.gdmec.a07150810.dialog.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/charactor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="字符选择对话框"
        android:id="@+id/button"
        android:onClick="characterpickerdialog"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/uidate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期选择框"
        android:onClick="datepickerdialog" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/uitime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间选择对话框"
        android:onClick="timepickerdialog" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度对话框"
        android:onClick="progressdialog" />

</LinearLayout>